    "typescript-eslint": "8.31.0",
    "vite": "6.3.5",
    "wrangler": "4.16.1"
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "check": "tsc && vite build && wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "dev": "vite",
    "lint": "bunx biome lint src/",
    "lint:fix": "bunx biome check --write src/",
    "format": "bunx biome format --write src/",
    "format:check": "bunx biome format src/",
    "tsc": "bunx tsc --noEmit",
    "type-check": "bunx tsc --noEmit --pretty",
    "check:all": "bun run type-check && bun run lint && bun run format:check",
    "ci": "bun run type-check && bun run lint && bun run format:check"
  },
  "type": "module"
}