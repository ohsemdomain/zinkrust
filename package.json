  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vite-plugin": "1.2.4",
    "@tanstack/router-devtools": "^1.120.11",
    "@tanstack/router-vite-plugin": "^1.120.11",
    "@types/node": "22.15.19",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vitejs/plugin-react": "4.4.1",
